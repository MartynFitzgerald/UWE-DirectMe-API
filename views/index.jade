      span.label Password: 
      input(type="text", name="password", placeholder="Password1")
      span.label &nbsp
      span.label Phone Number: 
      input(type="text", name="phone_number", placeholder="0711425365")
      span.label &nbsp
      span.label DarkMode: 
      input(type="text", name="darkmode", placeholder="0")
