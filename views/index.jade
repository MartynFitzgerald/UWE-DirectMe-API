extends layout

block content
  h1= title
  hr
  h3 GET relavent car park  locations
    h5 See #[a(href="/api/carpark?latitude=51.4545&longitude=-2.5870&radius=250000") #{"/api/carpark?latitude=51.4545&longitude=-2.5870&radius=250000"}]

  h3 GET All car park  locations
    h5 See #[a(href="/api/carpark/") #{"/api/carpark/"}]

  h3 GET One car park locations
    h5 Id: 1 See #[a(href="/api/carpark/1") #{"/api/carpark/1"}]

  hr

  h3 GET All scraping locations
    h5 See #[a(href="/api/scrapinglocation/") #{"/api/scrapinglocation/"}]

  h3 GET One scraping locations
    h5 Id: 1 See #[a(href="/api/scrapinglocation/1") #{"/api/scrapinglocation/1"}]

  h3 INSERT New scraping locations
  form(name="add-estimation", method="POST", action='/api/scrapinglocation')
    div.input
      span.label Name: 
      input(type="text", name="name", placeholder="Bristol")
      span.label &nbsp
      span.label Lat: 
      input(type="text", name="latitude", placeholder="51.4545")
      span.label &nbsp
      span.label Long: 
      input(type="text", name="longitude", placeholder="-2.5879")
      span.label &nbsp
      span.label Radius: 
      input(type="text", name="radius", placeholder="5000")
      span.label &nbsp
      input(type="submit", value="Insert")